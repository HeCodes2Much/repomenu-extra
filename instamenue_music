#!/usr/bin/env bash

# path:       /usr/bin/instamenue_smartrun
# author:     The-Repo-Club [wayne6324@gmail.com]
# github:     https://github.com/The-Repo-Club/instamenu-extra
# date:       2021-01-03 12:34:47.440579

asksetting() {
    playlist=$@
    if [[ -z ${playlist} ]];
    then
        options=$(ls $HOME/Music | grep '/*.ogg\|/*.mp3')
    else
        options=$(ls $playlist | grep '/*.ogg\|/*.mp3')
    fi
    echo -e ">>h Select a song to play.
$options
:b ‚èº Close music player" | instamenu -ps 1 -l 20 -w -400 -i -h -1 -y -1 -bw 4 -q "${1:-Search...}" -x 10000
}

LOOPSETTING="true"
while [ -n "$LOOPSETTING" ]; do
    CHOICE="$(asksetting $1)"
    [ -n "$CHOICE" ] || exit
    unset LOOPSETTING
    case $CHOICE in
    *.ogg)
        playlist=$@
        if [[ -z ${playlist} ]];
        then
            folder=$HOME/Music
        else
            folder=$playlist
        fi
        ffplay -nodisp "$folder/$CHOICE" &
        ;;
    *.mp3)
        playlist=$@
        if [[ -z ${playlist} ]];
        then
            folder=$HOME/Music
        else
            folder=$playlist
        fi
        ffplay -nodisp "$folder/$CHOICE" &
        ;;
    *Close*)
        pkill ffplay &
        ;;
    *)
        echo "Program terminated." && exit
        ;;
    esac
done

